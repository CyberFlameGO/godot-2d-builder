[sub_resource type="GDScript" id=2]
script/source = "extends TileMap


export(PackedScene) var StirlingEngine: PackedScene

var blueprint: Node2D


func _ready() -> void:
	blueprint = StirlingEngine.instance()
	add_child(blueprint)
	blueprint.global_position = map_to_world(world_to_map(get_global_mouse_position()))


func _unhandled_input(event: InputEvent) -> void:
	if blueprint:
		if event is InputEventMouseButton and event.pressed and event.button_index == BUTTON_LEFT:
			var cellv := world_to_map(event.global_position)
			if get_cellv(cellv) == -1:
				var new_position: Vector2 = event.global_position
				place_entity(cellv, StirlingEngine)

		if event is InputEventMouseMotion:
			var cellv := world_to_map(event.global_position)
			if get_cellv(cellv) == -1:
				blueprint.modulate = Color.white
			else:
				blueprint.modulate = Color.red
			blueprint.global_position = map_to_world(cellv)


func place_entity(cellv: Vector2, entity: PackedScene) -> void:
	var new_entity: Node2D = blueprint.Entity.instance()
	add_child(new_entity)
	
	new_entity.global_position = map_to_world(cellv)
	
	#----- TEMP
	var animation_player: AnimationPlayer = new_entity.get_node(\"AnimationPlayer\")
	animation_player.play(\"Work\")
	var tween: Tween = new_entity.get_node(\"Tween\")
	new_entity.get_node(\"Particles2D\").emitting = true
	
	tween.interpolate_property(animation_player, \"playback_speed\", 0, 1.0, 6.0)
	tween.start()
	# -----
	
	blueprint.queue_free()

	owner.electric_system.add_new_cell(cellv, new_entity.get_node(\"PowerComponent\"))
"

